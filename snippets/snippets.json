{
  "New Feature": {
    "prefix": "fet",
    "body": [
      "Feature('@${1:Tag}: ${2:Title}');"
    ],
    "description": "Creates a new scenario"
  },
  "New Scenario": {
    "prefix": "nsc",
    "body": [
      "Scenario('${1:Title}', (I) => {",
      "    ${2:// add steps here}",
      "});"
    ],
    "description": "Creates a new scenario"
  },

  "New Scenario with tags": {
    "prefix": "nsct",
    "body": [
      "Scenario('${1:Title}', (I) => {",
      "    ${3:// add steps here}",
      "}).tag('@${2:Tags}');"
    ],
    "description": "Creates a new scenario with tags"
	},
	
